<MySwiper@MDSwiperItem>
    FitImage:
        id: photo_image
        source: "homescreen/images/nopicture.jpg"
        radius: [20,]

<LocationContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: app.root.ids.homescreen.height - dp(50)

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': 1}

        MDLabel:
            id: place_detail
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'top_y': 0}
            text: ''

        ScrollView:
            size_hint_y: .2
            pos_hint: {'center_x': .5, 'top_y': .9}
            MDLabel:
                id: place_description
                size_hint_y: None
                text: ''

        MDSwiper:
            id: photogallery
            size_hint_y: .5
            pos_hint: {'center_x': .5, 'top_y': .8}


<StarButton>
    icon: "star"

<PlaceCard>
    id: place_card
    orientation: "vertical"
    size_hint: .5, None
    height: box_top.height + box_bottom.height
    focus_behavior: True
    ripple_behavior: True
    pos_hint: {"center_x": .5, "center_y": .5}

    MDBoxLayout:
        id: box_top
        spacing: "20dp"
        adaptive_height: True

        FitImage:
            id: place_image
            source: "../images/skola-logo.png"
            size_hint: .3, None
            height: text_box.height


        MDBoxLayout:
            id: text_box
            orientation: "vertical"
            adaptive_height: True
            spacing: "10dp"
            padding: 0, "10dp", "10dp", "10dp"

            MDLabel:
                id: name_label
                text: ""
                theme_text_color: "Primary"
                font_style: "H5"
                bold: True
                size_hint_y: None
                height: self.texture_size[1]


            MDLabel:
                id: category_label
                text: ""
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: "Primary"

    MDSeparator:

    MDBoxLayout:
        id: box_bottom
        adaptive_height: True
        padding: "10dp", 0, 0, 0

        MDLabel:
            text: "Hodnocení místa"
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_y": .5}
            theme_text_color: "Primary"

<ScrollList>
    scroll_timeout : 100

    MDList:
        id: card_list
        padding: 0


<HomeScreen>
    orientation: "vertical"
    pos_hint: {"top": .9}
    size_hint_y: .9
    height: self.minimum_height




